{
    "name": "SideQuest",
    "version": "0.3.4",
    "description": "A open app store for mobile android based VR devices such as the Levovo Mirage, Oculus Go, Oculus Quest, Vive Focus.",
    "repository": "https://github.com/the-expanse/SideQuest.git",
    "license": "MIT",
    "author": "Shane Harris",
    "main": "app.js",
    "scripts": {
        "concurrently": "concurrently",
        "start": "concurrently  \"wait-on http-get://localhost:4200 && electron .\"\"cd desktop-app && ng build --watch\" ",
        "postinstall": "electron-builder install-app-deps && cd desktop-app && yarn install",
        "pack": "electron-builder --dir",
        "abuild": "cd desktop-app && ng build --prod --aot",
        "dist": "electron-builder",
        "reset": "rm -rf node_modules && rm -rf desktop-app/node_modules && yarn install && cd desktop-app && yarn install"
    },
    "build": {
        "appId": "com.sidequestvr.app",
        "files": [
            "build/**/*",
            "node_modules/**/*",
            "desktop-app/dist/*",
            "package.json",
            "app.js",
            "adbkit.js"
        ],
        "directories": {
            "buildResources": "desktop-app/dist/assets"
        }
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged",
            "post-commit": "git update-index -g"
        }
    },
    "prettier": {
        "tabWidth": 4,
        "printWidth": 132,
        "semi": true,
        "jsxBracketSameLine": true,
        "parser": "typescript",
        "singleQuote": true,
        "useTabs": false,
        "trailingComma": "es5"
    },
    "dependencies": {
        "adbkit": "^2.11.1",
        "concurrently": "^4.1.0",
        "extract-zip": "^1.6.7",
        "md5": "^2.2.1",
        "opn": "^6.0.0",
        "request": "^2.88.0",
        "request-progress": "^3.0.0",
        "semver": "^6.0.0",
        "targz": "^1.0.1",
        "wait-on": "^3.2.0"
    },
    "devDependencies": {
        "electron": "^4.1.4",
        "electron-builder": "^20.43.0",
        "husky": "^2.3.0",
        "prettier": "1.17.1",
        "pretty-quick": "^1.11.0"
    }
}